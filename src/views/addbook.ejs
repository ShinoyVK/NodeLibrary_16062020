      <div class="panel" >
        <div class="panel-body">
          
          
          
          <!--/stories-->
          <div class="row" >    
            <form action="/admin/add" method="POST" target="_self">
                <table class="table">
                    <tr>
                        <td>Book Name</td>
                        <td><input type="text" name="title" class="form-control" required></td>
                    </tr>
                    <tr>
                        <td>Author</td>
                        <td><input type="text" name="author" class="form-control" pattern="[A-Za-z]{3,}" title="Alphabets Please and minimum 3 characters!!" required></td>
                    </tr>
                    <tr>
                      <td>Genre</td>
                      <td><input type="text" name="genre" class="form-control" pattern="[A-Za-z]{3,}" title="Alphabets Please and minimum 3 characters!!" required></td>
                  </tr>
                    <tr>
                      <td>Website</td>
                      <td><input type="text" name="web" class="form-control" pattern="^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$" title="Enter valid website address" required></td>
                  </tr>
                  <tr>
                      <td>Upload Image</td>
                      <td><input type="file" name="imageinput" id="imageinput" onchange="loadFile(event)" accept="image/*"></td>
                  </tr>
                  <tr>
                    <td><td><img id="imagepreview"></td></td>
                  </tr>
                  <tr>
                    <td>Upload file</td>
                    <td><input type="file" name="fileinput" id="fileinput" onchange="loadPdf()" accept=".pdf"></td>
                </tr>
                  <tr>
                      <td></td>
                      <td><button type="submit" class="btn btn-success" onclick="checkPassword();">Add</button></td>
                  </tr>
                  <tr>
                      <td></td>
                      <td><p id="result"></p></td>
                  </tr>
                </table>
                </form> 
          </div>
          <!--/stories-->
          
          
